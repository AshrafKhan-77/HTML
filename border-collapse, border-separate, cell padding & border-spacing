<!-- CSS code below... -->
table, th, td {
  border: 5px solid green;
}
table {
  width: 50%;
  border-spacing: 10px;
  <!-- To collapse border:- border-collapse:collapse; -->
  <!-- To separate border:- border-collapse:separate; -->
}
th {
  color: red;
  padding: 20px;
}
td {
  color: blue;
  padding: 10px;
}
